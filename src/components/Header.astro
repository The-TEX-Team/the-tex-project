<header class="border-b-[1px] sticky top-0 z-50 bg-bodyColor border-[#2C3233]">
  <nav>
    <div class="main-layout min-h-16 nd:h-16 mx-auto flex justify-between align-stretch">
      <div id="logo" class="flex items-center text-blue-600 font-bold">
        <a class="text-xl" href="/"
          ><img
            width="150"
            loading="lazy"
            src="/assets/title-logo.png"
            alt="The TEX Project logo"
          /></a
        >
      </div>
      <ul
        id="nav-links"
        class="hidden gap-4 text-xl md:text-base font-semibold absolute top-16 right-4 bg-[#1D1D20] rounded-lg w-64 py-4 shadow-xl border-2 border-[#343437] md:border-none md:shadow-none md:py-0 md:w-max md:bg-transparent md:flex md:static md:items-center md:rounded-none"
      >
        <li>
          <a
            class="w-full py-3 flex md:items-center pl-6 md:pl-4 pr-4 hover:bg-emerald-400/10 md:hover:bg-transparent md:py-2 md:rounded-lg hover:text-emerald-400"
            href="/learn">Learn</a
          >
        </li>
        <li>
          <a
            class="w-full py-3 flex md:items-center pl-6 md:pl-4 pr-4 hover:bg-emerald-400/10 md:hover:bg-transparent md:py-2 md:rounded-lg hover:text-emerald-400"
            href="/about">About</a
          >
        </li>
      </ul>
      <div class="md:hidden flex items-center">
        <button id="menu-button" class="p-1 rounded-full focus:outline-none">
          <svg class="fill-current h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path id="menu-icon" d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  let menuOpen = false;
  const menuButton = document.getElementById("menu-button");
  const menuIcon = document.getElementById("menu-icon");
  const navLinks = document.getElementById("nav-links");

  function handleMenuButtonClick() {
    if (menuOpen === false) {
      navLinks?.classList.replace("hidden", "grid");
      menuIcon?.setAttribute(
        "d",
        "M10 8.586L2.929 1.515 1.515 2.929 8.586 10l-7.071 7.071 1.414 1.414L10 11.414l7.071 7.071 1.414-1.414L11.414 10l7.071-7.071-1.414-1.414L10 8.586z"
      );
      menuOpen = true;
    } else {
      navLinks?.classList.replace("grid", "hidden");
      menuIcon?.setAttribute("d", "M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z");
      menuOpen = false;
    }
  }
  menuButton?.addEventListener("click", handleMenuButtonClick);
</script>
