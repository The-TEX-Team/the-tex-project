---
export interface Props {
  contribution: {
    title: string;
    description: string;
    icon: string;
  };
}

const { contribution } = Astro.props;
---

<div class="bg-[#1D1D20] border-2 border-[#343437] rounded-xl p-6">
  <div class="flex gap-3 items-center mb-4">
    <span class="text-emerald-400">
      {
        contribution.icon === "writing" && (
          <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="-2 -2 24 24">
            <>
              <rect x="-2" y="-2" width="24" height="24" fill="none" />
              <path
                fill="currentColor"
                d="m5.72 14.456l1.761-.508l10.603-10.73a.456.456 0 0 0-.003-.64l-.635-.642a.443.443 0 0 0-.632-.003L6.239 12.635zM18.703.664l.635.643c.876.887.884 2.318.016 3.196L8.428 15.561l-3.764 1.084a.901.901 0 0 1-1.11-.623a.915.915 0 0 1-.002-.506l1.095-3.84L15.544.647a2.215 2.215 0 0 1 3.159.016zM7.184 1.817c.496 0 .898.407.898.909a.903.903 0 0 1-.898.909H3.592c-.992 0-1.796.814-1.796 1.817v10.906c0 1.004.804 1.818 1.796 1.818h10.776c.992 0 1.797-.814 1.797-1.818v-3.635c0-.502.402-.909.898-.909s.898.407.898.91v3.634c0 2.008-1.609 3.636-3.593 3.636H3.592C1.608 19.994 0 18.366 0 16.358V5.452c0-2.007 1.608-3.635 3.592-3.635z"
              />
            </>
          </svg>
        )
      }
      {
        contribution.icon === "comment" && (
          <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24">
            <rect width="24" height="24" fill="none" />{" "}
            <path
              fill="currentColor"
              d="M12 2A10 10 0 0 0 2 12a9.89 9.89 0 0 0 2.26 6.33l-2 2a1 1 0 0 0-.21 1.09A1 1 0 0 0 3 22h9a10 10 0 0 0 0-20m0 18H5.41l.93-.93a1 1 0 0 0 0-1.41A8 8 0 1 1 12 20"
            />
          </svg>
        )
      }
    </span>
    <span class="text-xl font-bold">{contribution.title}</span>
  </div>
  <div>
    <p class="text-textSecondary font-medium">
      {contribution.description}
    </p>
  </div>
</div>
