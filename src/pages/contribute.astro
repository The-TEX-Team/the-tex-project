---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContributionCard from "@/components/Contribute/ContributionCard.astro";
import ContributionSection from "@/components/Contribute/ContributionSection.astro";
import GuidelinesAccordion from "@/components/Contribute/GuidelinesAccordion.astro";

const pageTitle = "Contribute";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="pt-20">
    <div class="max-w-[50rem] px-6 mx-auto">
      <h2 class="font-Orbitron text-4xl font-bold text-center mb-3">
        Contribute to <span class="text-emerald-400">The TEX Project</span>
      </h2>
      <p class="font-semibold text-center mb-10 tracking-wider text-textSecondary">
        Join the community and make a lasting impact on STEM education in Malaysia. Whether youâ€™re
        an expert eager to share your knowledge, a passionate educator, or simply someone who
        believes in the power of education, there are many ways you can contribute. Help us create
        high-quality, accessible content for everyone, it only takes 3 steps to start.
      </p>
      <div class="flex justify-center">
        <a class="btn bg-themePrimary" href="#choose-contribution"
          >How to contribute?
          <span class="ml-2 my-auto">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 32 32">
              <rect width="32" height="32" fill="none"></rect>
              <path
                fill="currentColor"
                d="M8.037 11.166L14.5 22.36c.825 1.43 2.175 1.43 3 0l6.463-11.195c.826-1.43.15-2.598-1.5-2.598H9.537c-1.65 0-2.326 1.17-1.5 2.6z"
              ></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
  <section id="choose-contribution">
    <ContributionSection
      title="Choose your contribution"
      number="1"
      description="Choose how you want to contribute to The TEX Project. Each type of contribution plays a crucial role in enriching our platform and helping learners."
    >
      <div class="grid md:grid-cols-2 gap-4 max-w-[45rem] mx-auto">
        <ContributionCard
          title="Article Writing"
          description="Help us write informative and engaging articles"
          icon="writing"
        />
        <ContributionCard
          title="Tutorial Creation"
          description="Help us create comprehensive and easy-to-follow tutorials"
          icon="writing"
        />
      </div>
    </ContributionSection>
  </section>
  <section>
    <ContributionSection
      title="Understand the contribution guidelines"
      number="2"
      description="Of course, there are some guidelines you need to follow before becoming a contributor."
    >
      <GuidelinesAccordion />
    </ContributionSection>
  </section>
  <section class="mb-40">
    <ContributionSection
      title="Start contributing"
      number="3"
      description="That's all you need to start contributing to The TEX Project! Don't waste any more time, be part of the us now!"
    />
  </section>
  <section class="welcome-to-team">
    <div class="max-w-[50rem] mx-auto py-36 px-6">
      <h2 class="text-center flex flex-col gap-1">
        <span class="text-textContent text-xl md:text-3xl font-semibold">WELCOME TO </span><span
          class="text-emerald-400 text-5xl md:text-6xl font-bold font-Orbitron"
          >THE TEX PROJECT</span
        >
      </h2>
    </div>
  </section>
</BaseLayout>
